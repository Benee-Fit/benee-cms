{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@repo/*": ["../../packages/*"]
    },
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSolutionSearching": true,
    "disableReferencedProjectLoad": true
  },
  "include": [
    "next-env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.next/**",
    "**/dist/**",
    "**/build/**"
  ]
}
